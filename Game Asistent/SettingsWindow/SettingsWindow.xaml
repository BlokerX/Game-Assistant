            <Rectangle.Fill>
                <SolidColorBrush Color="White" Opacity="0.01"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="ColorsLabel" Content="Colors:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,343,0,0" FontSize="16"/>
