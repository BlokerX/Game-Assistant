<Window x:Name="ClockWindow" x:Class="GameAssistant.ClockForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameAssistant"
        mc:Ignorable="d"
        Title="Clock Widget" Height="62" Width="200" Topmost="True" Cursor="" AllowsTransparency="True" WindowStyle="None" Background="Transparent" AllowDrop="True" Activated="ClockWindow_Activated" ResizeMode="CanMinimize" ShowInTaskbar="False" Closing="ClockWindow_Closing">
    <Grid x:Name="Grid" Background="Transparent">
        <Rectangle x:Name="rec1" Opacity="0.5">
            <Rectangle.Fill>
                <SolidColorBrush Color="#FFFFFFB5"/>
            </Rectangle.Fill>
        </Rectangle>

        <Label x:Name="ClockLabel" Content="00:00:00" FontFamily="Century Gothic" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseLeftButtonDown="ClockLabel_MouseLeftButtonDown" TextOptions.TextHintingMode="Fixed" BorderThickness="0" Opacity="0.75" Margin="-10"/>

    </Grid>
</Window>
